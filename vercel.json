{
  "version": 2,
  "functions": {
    "api/index.js": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/((?!api/|assets/|.*\\..*$).*)", "destination": "/index.html" }
  ]
}
